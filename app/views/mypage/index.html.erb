<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Private</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.title %></td>
        <td><%= meal.description %></td>
        <td><%= meal.private %></td>
        <td><%= link_to '詳細', meal %></td>
        <td><%= link_to '編集', edit_meal_path(meal) %></td>
        <td><%= link_to '削除', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規作成', new_meal_path, class: 'btn btn-primary' %>
